<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerFormLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/card_components</item>
        <item name="android:layout_below">@id/textLogin</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">8dp</item>

    </style>

    <style name="InputTextFormLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ProfileActivity">

    <View
        android:id="@+id/container_user_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@id/container_user_profile"
        android:layout_alignTop="@id/container_user_profile"
        android:layout_alignEnd="@id/container_user_profile"
        android:layout_alignBottom="@id/container_user_profile"
        android:padding="25dp"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="match_parent"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_below="@id/container_user_profile"
        android:text="Username"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:layout_below="@id/usernameText"
        android:text="Username@gmail.cim"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_btn"
        style="@style/ButtonLogout"
        android:padding="12dp"
        android:text="@string/sair"
        android:textSize="20dp"
        android:layout_margin="25dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>
